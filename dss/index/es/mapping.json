{
  "settings": {
    "analysis": {
      "normalizer": {
        "keyword_lowercase": {
          "type": "custom",
          "filter": ["lowercase"]
        }
      }
    },
    "index": {
      "percolator": {
        "map_unmapped_fields_as_string": true
      }
    }
  },
  "mappings": {
    "doc": {
      "date_detection": true,
      "dynamic_date_formats": [
        "yyyy-MM-dd HH:mm:ss",
        "strict_date_optional_time"
      ],
      "dynamic_templates": [
        {
          "dates": {
            "match_mapping_type": "date",
            "mapping": {
              "type": "date"
            }
          }
        },
        {
          "short_strings": {
            "match_mapping_type": "string",
            "mapping": {
              "normalizer": "keyword_lowercase",
              "type": "keyword",
              "ignore_above": 256,
              "fields": {
                "text": {
                  "type": "text"
                }
              }
            }
          }
        }
      ],
      "properties": {
        "uuid": {"type": "keyword"},
        "manifest": {
          "properties":{
            "version": {"type": "keyword"}
          }
        }
      }
    },
    "query":{
      "properties":{
        "query": {
          "type": "percolator"
        }
      }
    }
  }
}
